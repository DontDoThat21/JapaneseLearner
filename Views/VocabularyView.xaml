<UserControl x:Class="JapaneseTracker.Views.VocabularyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:JapaneseTracker.ViewModels"
             xmlns:converters="clr-namespace:JapaneseTracker.Converters"
             Background="Transparent">
    
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:JLPTLevelToColorConverter x:Key="JLPTLevelToColorConverter"/>
        <converters:SRSLevelToIconConverter x:Key="SRSLevelToIconConverter"/>
    </UserControl.Resources>
    
    <UserControl.DataContext>
        <viewModels:VocabularyViewModel/>
    </UserControl.DataContext>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Vocabulary Learning" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Build your Japanese vocabulary with context and examples"
                               FontSize="16"
                               Opacity="0.7"
                               Margin="0,0,0,12"/>
                    
                    <!-- Daily Goal Progress -->
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Target" 
                                               Width="20" 
                                               Height="20"
                                               Foreground="{StaticResource SecondaryBrush}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="Daily Goal: 7 of 10 words reviewed" 
                                   FontSize="14"
                                   VerticalAlignment="Center"/>
                        <ProgressBar Value="70" 
                                     Maximum="100" 
                                     Width="100"
                                     Height="6"
                                     Margin="12,0,0,0"
                                     Foreground="{StaticResource SecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- Category Filter -->
                    <ComboBox MinWidth="120"
                              Margin="0,0,16,0"
                              materialDesign:HintAssist.Hint="Category">
                        <ComboBoxItem Content="All Types"/>
                        <ComboBoxItem Content="Nouns"/>
                        <ComboBoxItem Content="Verbs"/>
                        <ComboBoxItem Content="Adjectives"/>
                        <ComboBoxItem Content="Expressions"/>
                        <ComboBoxItem Content="Greetings"/>
                    </ComboBox>
                    
                    <!-- JLPT Level Filter -->
                    <ComboBox ItemsSource="{Binding JLPTLevels}"
                              SelectedItem="{Binding SelectedJLPTLevel}"
                              materialDesign:HintAssist.Hint="JLPT Level"
                              MinWidth="120"
                              Margin="0,0,16,0"/>
                    
                    <!-- Search Box -->
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Search vocabulary..."
                             MinWidth="200"
                             Margin="0,0,16,0">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchVocabularyCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    
                    <!-- Search Button -->
                    <Button Command="{Binding SearchVocabularyCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            ToolTip="Search">
                        <materialDesign:PackIcon Kind="Magnify"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        
        <!-- Stats Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Total Vocabulary -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="16"
                                 Style="{StaticResource AnimatedCardStyle}">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Book" 
                                               Width="24" 
                                               Height="24"
                                               Foreground="{StaticResource PrimaryBrush}"
                                               HorizontalAlignment="Center"/>
                    </Grid>
                    
                    <TextBlock Text="{Binding VocabularyList.Count, StringFormat='{}Total: {0}'}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Words"
                               FontSize="14"
                               Opacity="0.7"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>
            
            <!-- Learned -->
            <materialDesign:Card Grid.Column="1" Margin="8,0,8,0" Padding="16"
                                 Style="{StaticResource AnimatedCardStyle}">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="CheckCircle" 
                                               Width="24" 
                                               Height="24"
                                               Foreground="{StaticResource SuccessBrush}"
                                               HorizontalAlignment="Center"/>
                    </Grid>
                    
                    <TextBlock Text="{Binding LearnedCount, StringFormat='{}Learned: {0}'}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource SuccessBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Words"
                               FontSize="14"
                               Opacity="0.7"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>
            
            <!-- Review Due -->
            <materialDesign:Card Grid.Column="2" Margin="8,0,8,0" Padding="16"
                                 Style="{StaticResource AnimatedCardStyle}">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Clock" 
                                               Width="24" 
                                               Height="24"
                                               Foreground="{StaticResource WarningBrush}"
                                               HorizontalAlignment="Center"/>
                    </Grid>
                    
                    <TextBlock Text="{Binding ReviewDueCount, StringFormat='{}Due: {0}'}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource WarningBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Reviews"
                               FontSize="14"
                               Opacity="0.7"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>
            
            <!-- Study Streak -->
            <materialDesign:Card Grid.Column="3" Margin="8,0,0,0" Padding="16"
                                 Style="{StaticResource AnimatedCardStyle}">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Fire" 
                                               Width="24" 
                                               Height="24"
                                               Foreground="{StaticResource SecondaryBrush}"
                                               HorizontalAlignment="Center"/>
                    </Grid>
                    
                    <TextBlock Text="{Binding CurrentUser.StudyStreak, StringFormat='{}Streak: {0}'}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource SecondaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Days"
                               FontSize="14"
                               Opacity="0.7"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
        
        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Vocabulary List -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource PrimaryBrush}" 
                            Padding="16,12">
                        <TextBlock Text="Vocabulary List" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource OnPrimaryBrush}"/>
                    </Border>
                    
                    <!-- List -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding VocabularyList}"
                             SelectedItem="{Binding SelectedVocabulary}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource DividerBrush}" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="16,12"
                                        Background="Transparent">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Word Info -->
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Word}" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold"
                                                       FontFamily="{StaticResource JapaneseFontFamily}"/>
                                            <TextBlock Text="{Binding Furigana}" 
                                                       FontSize="12" 
                                                       FontFamily="{StaticResource JapaneseFontFamily}"
                                                       Opacity="0.7"/>
                                            <TextBlock Text="{Binding Meaning}" 
                                                       FontSize="14" 
                                                       Margin="0,2,0,0"/>
                                            
                                            <!-- JLPT Level and Mastery Status -->
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <Border Background="{Binding JLPTLevel, Converter={StaticResource JLPTLevelToColorConverter}}"
                                                        CornerRadius="10"
                                                        Padding="6,2"
                                                        Margin="0,0,8,0">
                                                    <TextBlock Text="{Binding JLPTLevel}" 
                                                               FontSize="10" 
                                                               FontWeight="Bold"
                                                               Foreground="White"/>
                                                </Border>
                                                
                                                <Border Background="{StaticResource SurfaceBrush}"
                                                        CornerRadius="8"
                                                        Padding="6,2">
                                                    <TextBlock Text="{Binding MasteryLevel}" 
                                                               FontSize="10"
                                                               Opacity="0.8"/>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Progress Indicator -->
                                        <StackPanel Grid.Column="1" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center">
                                            <!-- SRS Level Icon -->
                                            <materialDesign:PackIcon Kind="{Binding SRSLevel, Converter={StaticResource SRSLevelToIconConverter}}" 
                                                                   Width="20" 
                                                                   Height="20"
                                                                   HorizontalAlignment="Center"
                                                                   Opacity="0.7"/>
                                            
                                            <!-- Review Status -->
                                            <TextBlock Text="{Binding ProgressDescription}" 
                                                       FontSize="9"
                                                       TextAlignment="Center"
                                                       Opacity="0.6"
                                                       MaxWidth="80"
                                                       TextWrapping="Wrap"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </materialDesign:Card>
            
            <!-- Vocabulary Details -->
            <materialDesign:Card Grid.Column="1" Margin="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource PrimaryBrush}" 
                            Padding="16,12">
                        <TextBlock Text="Vocabulary Details" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource OnPrimaryBrush}"/>
                    </Border>
                    
                    <!-- Details Content -->
                    <ScrollViewer Grid.Row="1" Padding="24">
                        <StackPanel>
                            <!-- No Selection Message -->
                            <StackPanel Visibility="{Binding SelectedVocabulary, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverted}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="SelectionSearch" 
                                                       Width="64" 
                                                       Height="64" 
                                                       Opacity="0.3"
                                                       HorizontalAlignment="Center"/>
                                <TextBlock Text="Select a word to view details"
                                           FontSize="18"
                                           Opacity="0.7"
                                           HorizontalAlignment="Center"
                                           Margin="0,16,0,0"/>
                            </StackPanel>
                            
                            <!-- Vocabulary Details -->
                            <StackPanel Visibility="{Binding SelectedVocabulary, Converter={StaticResource BooleanToVisibilityConverter}}">
                                
                                <!-- Word Display -->
                                <Border Background="{StaticResource SurfaceBrush}"
                                        BorderBrush="{StaticResource DividerBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="24"
                                        Margin="0,0,0,24"
                                        HorizontalAlignment="Center">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding SelectedVocabulary.Word}" 
                                                   FontSize="48" 
                                                   FontFamily="{StaticResource JapaneseFontFamily}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding SelectedVocabulary.Furigana}" 
                                                   FontSize="24" 
                                                   FontFamily="{StaticResource JapaneseFontFamily}"
                                                   HorizontalAlignment="Center"
                                                   Opacity="0.7"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Basic Info -->
                                <Grid Margin="0,0,0,24">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Meaning" 
                                                   FontWeight="SemiBold" 
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding SelectedVocabulary.Meaning}" 
                                                   FontSize="16"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="JLPT Level" 
                                                   FontWeight="SemiBold" 
                                                   Margin="0,0,0,4"/>
                                        <Border Background="{Binding SelectedVocabulary.JLPTLevel, Converter={StaticResource JLPTLevelToColorConverter}}"
                                                CornerRadius="12"
                                                Padding="8,4"
                                                HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding SelectedVocabulary.JLPTLevel}" 
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Progress Information -->
                                <StackPanel Margin="0,0,0,24" 
                                            Visibility="{Binding SelectedVocabulary.Progress, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Learning Progress" 
                                               FontWeight="SemiBold" 
                                               FontSize="16" 
                                               Margin="0,0,0,12"/>
                                    
                                    <Border Background="{StaticResource SurfaceBrush}"
                                            BorderBrush="{StaticResource DividerBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="16">
                                        <StackPanel>
                                            <!-- Mastery Level -->
                                            <Grid Margin="0,0,0,12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <materialDesign:PackIcon Grid.Column="0"
                                                                       Kind="{Binding SelectedVocabulary.SRSLevel, Converter={StaticResource SRSLevelToIconConverter}}" 
                                                                       Width="20" 
                                                                       Height="20"
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,12,0"/>
                                                
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding SelectedVocabulary.MasteryLevel}"
                                                               FontWeight="Medium"
                                                               FontSize="14"/>
                                                    <TextBlock Text="{Binding SelectedVocabulary.ProgressDescription}"
                                                               FontSize="12"
                                                               Opacity="0.7"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <!-- Statistics -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding SelectedVocabulary.CorrectCount}" 
                                                               FontSize="20"
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource SuccessBrush}"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Correct" 
                                                               FontSize="11"
                                                               Opacity="0.7"
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding SelectedVocabulary.IncorrectCount}" 
                                                               FontSize="20"
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource ErrorBrush}"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Incorrect" 
                                                               FontSize="11"
                                                               Opacity="0.7"
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>
                                                
                                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding SelectedVocabulary.AccuracyRate, StringFormat={}{0:F0}%}" 
                                                               FontSize="20"
                                                               FontWeight="Bold"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Accuracy" 
                                                               FontSize="11"
                                                               Opacity="0.7"
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Part of Speech -->
                                <StackPanel Margin="0,0,0,24">
                                    <TextBlock Text="Part of Speech" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding SelectedVocabulary.PartOfSpeech}" 
                                               FontSize="16"/>
                                </StackPanel>
                                
                                <!-- Example Sentences -->
                                <StackPanel Margin="0,0,0,24">
                                    <TextBlock Text="Example Sentences" 
                                               FontWeight="SemiBold" 
                                               FontSize="16" 
                                               Margin="0,0,0,12"/>
                                    
                                    <ItemsControl ItemsSource="{Binding SelectedVocabulary.ExampleSentences}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource SurfaceBrush}"
                                                        BorderBrush="{StaticResource DividerBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        Padding="16"
                                                        Margin="0,0,0,8">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding}" 
                                                                   FontSize="14"
                                                                   FontFamily="{StaticResource JapaneseFontFamily}"
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                
                                <!-- Notes -->
                                <StackPanel Margin="0,0,0,24" 
                                            Visibility="{Binding SelectedVocabulary.Notes, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Notes" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding SelectedVocabulary.Notes}" 
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               Opacity="0.8"/>
                                </StackPanel>
                                
                                <!-- Action Buttons -->
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center"
                                            Margin="0,24,0,24">
                                    <Button Command="{Binding StudyVocabularyCommand}"
                                            CommandParameter="{Binding SelectedVocabulary}"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Background="{StaticResource SuccessBrush}"
                                            BorderBrush="{StaticResource SuccessBrush}"
                                            Margin="0,0,12,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="School" 
                                                                   Width="18" 
                                                                   Height="18"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Study Now"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Margin="0,0,12,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="VolumeHigh" 
                                                                   Width="18" 
                                                                   Height="18"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Audio"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Style="{StaticResource MaterialDesignOutlinedButton}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="CardText" 
                                                                   Width="18" 
                                                                   Height="18"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Flashcard"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                
                                <!-- Quick Practice Section -->
                                <materialDesign:Card Background="{StaticResource SurfaceBrush}"
                                                   Margin="0,12,0,0"
                                                   Padding="20">
                                    <StackPanel>
                                        <TextBlock Text="Quick Practice" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="16" 
                                                   Margin="0,0,0,16"/>
                                        
                                        <!-- Practice Type Buttons -->
                                        <UniformGrid Columns="2" 
                                                     HorizontalAlignment="Stretch">
                                            <!-- Reading Practice -->
                                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    Margin="0,0,8,8"
                                                    Padding="12">
                                                <StackPanel>
                                                    <materialDesign:PackIcon Kind="EyeOutline" 
                                                                           Width="20" 
                                                                           Height="20"
                                                                           HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Reading" 
                                                               FontSize="12"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </Button>
                                            
                                            <!-- Meaning Practice -->
                                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    Margin="8,0,0,8"
                                                    Padding="12">
                                                <StackPanel>
                                                    <materialDesign:PackIcon Kind="Lightbulb" 
                                                                           Width="20" 
                                                                           Height="20"
                                                                           HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Meaning" 
                                                               FontSize="12"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </Button>
                                            
                                            <!-- Writing Practice -->
                                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    Margin="0,0,8,0"
                                                    Padding="12">
                                                <StackPanel>
                                                    <materialDesign:PackIcon Kind="Pencil" 
                                                                           Width="20" 
                                                                           Height="20"
                                                                           HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Writing" 
                                                               FontSize="12"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </Button>
                                            
                                            <!-- Listening Practice -->
                                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                                    Margin="8,0,0,0"
                                                    Padding="12">
                                                <StackPanel>
                                                    <materialDesign:PackIcon Kind="Headphones" 
                                                                           Width="20" 
                                                                           Height="20"
                                                                           HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Listening" 
                                                               FontSize="12"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </Button>
                                        </UniformGrid>
                                    </StackPanel>
                                </materialDesign:Card>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
        </Grid>
        
        <!-- Floating Action Buttons -->
        <Grid Grid.Row="2"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              Margin="0,0,24,24">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Right">
                <!-- Quick Review Button -->
                <Button Style="{StaticResource MaterialDesignFloatingActionButton}"
                        Background="{StaticResource SuccessBrush}"
                        BorderBrush="{StaticResource SuccessBrush}"
                        Margin="0,0,0,16"
                        ToolTip="Start Quick Review">
                    <materialDesign:PackIcon Kind="Flash" 
                                           Width="24" 
                                           Height="24"/>
                </Button>
                
                <!-- Add New Word Button -->
                <Button Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                        Background="{StaticResource SecondaryBrush}"
                        BorderBrush="{StaticResource SecondaryBrush}"
                        ToolTip="Add Custom Word">
                    <materialDesign:PackIcon Kind="Plus" 
                                           Width="20" 
                                           Height="20"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

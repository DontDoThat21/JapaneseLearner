<UserControl x:Class="JapaneseTracker.Views.JLPTProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:JapaneseTracker.ViewModels"
             xmlns:converters="clr-namespace:JapaneseTracker.Converters"
             Background="Transparent">
    
    <UserControl.Resources>
        <converters:JLPTLevelToColorConverter x:Key="JLPTLevelToColorConverter"/>
        <converters:PercentToCircleConverter x:Key="PercentToCircleConverter"/>
    </UserControl.Resources>
    
    <UserControl.DataContext>
        <viewModels:JLPTProgressViewModel/>
    </UserControl.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header Section -->
            <materialDesign:Card Grid.Row="0" 
                               Margin="0,0,0,24" 
                               Padding="24"
                               Background="{StaticResource PrimaryBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="JLPT Progress" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource OnPrimaryBrush}"/>
                        <TextBlock Text="Track your Japanese Language Proficiency Test journey"
                                   FontSize="16" 
                                   Margin="0,8,0,0"
                                   Foreground="{StaticResource OnPrimaryBrush}"
                                   Opacity="0.9"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                            <TextBlock Text="Current Level:" 
                                     FontSize="14"
                                     Foreground="{StaticResource OnPrimaryBrush}"
                                     Opacity="0.8"
                                     VerticalAlignment="Center"/>
                            <Border Background="{Binding CurrentLevel, Converter={StaticResource JLPTLevelToColorConverter}}"
                                  CornerRadius="12"
                                  Padding="12,4"
                                  Margin="8,0,0,0">
                                <TextBlock Text="{Binding CurrentLevel}" 
                                         FontWeight="Bold"
                                         FontSize="14"
                                         Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Refresh Button -->
                    <Button Grid.Column="1" 
                          Command="{Binding LoadProgressCommand}"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Foreground="{StaticResource OnPrimaryBrush}"
                          BorderBrush="{StaticResource OnPrimaryBrush}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" 
                                                   Width="16" 
                                                   Height="16"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Refresh"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </materialDesign:Card>
            
            <!-- Current Level Progress -->
            <materialDesign:Card Grid.Row="1" 
                               Margin="0,0,0,24" 
                               Padding="24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                             Text="{Binding CurrentLevel, StringFormat='Current Level: {0} Progress'}" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Margin="0,0,0,16"/>
                    
                    <Grid Grid.Row="1" 
                        DataContext="{Binding SelectedProgress}"
                        Visibility="{Binding Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Kanji Progress -->
                        <Border Grid.Column="0" 
                              Background="{StaticResource SurfaceBrush}"
                              CornerRadius="12"
                              Padding="16"
                              Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="Kanji" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,12"/>
                                
                                <!-- Circular Progress Bar -->
                                <Grid Width="80" Height="80" HorizontalAlignment="Center">
                                    <Ellipse Fill="{StaticResource BackgroundBrush}"
                                           Stroke="{StaticResource OnSurfaceBrush}"
                                           StrokeThickness="8"
                                           Opacity="0.3"/>
                                    
                                    <Ellipse Fill="Transparent"
                                           Stroke="{StaticResource AccentBrush}"
                                           StrokeThickness="8"
                                           StrokeDashArray="{Binding KanjiProgress, Converter={StaticResource PercentToCircleConverter}}"
                                           StrokeDashOffset="75"
                                           RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform Angle="-90"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                    
                                    <TextBlock Text="{Binding KanjiProgress, StringFormat='{}{0:F0}%'}"
                                             FontSize="14"
                                             FontWeight="Bold"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <TextBlock Text="{Binding KanjiLearned, StringFormat='{}{0} learned'}"
                                         HorizontalAlignment="Center"
                                         Opacity="0.8"
                                         Margin="0,8,0,0"/>
                                <TextBlock Text="{Binding RequiredKanji, StringFormat='of {0} required'}"
                                         HorizontalAlignment="Center"
                                         Opacity="0.6"
                                         FontSize="12"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Vocabulary Progress -->
                        <Border Grid.Column="1" 
                              Background="{StaticResource SurfaceBrush}"
                              CornerRadius="12"
                              Padding="16"
                              Margin="4,0">
                            <StackPanel>
                                <TextBlock Text="Vocabulary" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,12"/>
                                
                                <!-- Circular Progress Bar -->
                                <Grid Width="80" Height="80" HorizontalAlignment="Center">
                                    <Ellipse Fill="{StaticResource BackgroundBrush}"
                                           Stroke="{StaticResource OnSurfaceBrush}"
                                           StrokeThickness="8"
                                           Opacity="0.3"/>
                                    
                                    <Ellipse Fill="Transparent"
                                           Stroke="{StaticResource SecondaryBrush}"
                                           StrokeThickness="8"
                                           StrokeDashArray="{Binding VocabularyProgress, Converter={StaticResource PercentToCircleConverter}}"
                                           StrokeDashOffset="75"
                                           RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform Angle="-90"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                    
                                    <TextBlock Text="{Binding VocabularyProgress, StringFormat='{}{0:F0}%'}"
                                             FontSize="14"
                                             FontWeight="Bold"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <TextBlock Text="{Binding VocabularyLearned, StringFormat='{}{0} learned'}"
                                         HorizontalAlignment="Center"
                                         Opacity="0.8"
                                         Margin="0,8,0,0"/>
                                <TextBlock Text="{Binding RequiredVocabulary, StringFormat='of {0} required'}"
                                         HorizontalAlignment="Center"
                                         Opacity="0.6"
                                         FontSize="12"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Grammar Progress -->
                        <Border Grid.Column="2" 
                              Background="{StaticResource SurfaceBrush}"
                              CornerRadius="12"
                              Padding="16"
                              Margin="8,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Grammar" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,12"/>
                                
                                <!-- Circular Progress Bar -->
                                <Grid Width="80" Height="80" HorizontalAlignment="Center">
                                    <Ellipse Fill="{StaticResource BackgroundBrush}"
                                           Stroke="{StaticResource OnSurfaceBrush}"
                                           StrokeThickness="8"
                                           Opacity="0.3"/>
                                    
                                    <Ellipse Fill="Transparent"
                                           Stroke="#FF9800"
                                           StrokeThickness="8"
                                           StrokeDashArray="{Binding GrammarProgress, Converter={StaticResource PercentToCircleConverter}}"
                                           StrokeDashOffset="75"
                                           RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform Angle="-90"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                    
                                    <TextBlock Text="{Binding GrammarProgress, StringFormat='{}{0:F0}%'}"
                                             FontSize="14"
                                             FontWeight="Bold"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <TextBlock Text="{Binding GrammarLearned, StringFormat='{}{0} learned'}"
                                         HorizontalAlignment="Center"
                                         Opacity="0.8"
                                         Margin="0,8,0,0"/>
                                <TextBlock Text="{Binding RequiredGrammar, StringFormat='of {0} required'}"
                                         HorizontalAlignment="Center"
                                         Opacity="0.6"
                                         FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </materialDesign:Card>
            
            <!-- All Levels Overview -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                         Text="All JLPT Levels" 
                         FontSize="20" 
                         FontWeight="SemiBold"
                         Margin="0,0,0,16"/>
                
                <ItemsControl Grid.Row="1" 
                            ItemsSource="{Binding JLPTProgressList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="0,0,0,16" 
                                               Padding="24"
                                               Cursor="Hand">
                                <materialDesign:Card.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" 
                                                Command="{Binding DataContext.SelectLevelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding Level}"/>
                                </materialDesign:Card.InputBindings>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Level Badge -->
                                    <Border Grid.Column="0" 
                                          Background="{Binding Level, Converter={StaticResource JLPTLevelToColorConverter}}"
                                          CornerRadius="24"
                                          Width="48" 
                                          Height="48"
                                          Margin="0,0,16,0">
                                        <TextBlock Text="{Binding Level}" 
                                                 FontWeight="Bold"
                                                 FontSize="16"
                                                 Foreground="White"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Progress Info -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Level, StringFormat='JLPT {0}'}" 
                                                 FontSize="18" 
                                                 FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding OverallProgress, StringFormat='{}{0:F0}% Complete'}" 
                                                 FontSize="14" 
                                                 Opacity="0.8"
                                                 Margin="0,4,0,8"/>
                                        
                                        <!-- Progress Bar -->
                                        <ProgressBar Value="{Binding OverallProgress}" 
                                                   Maximum="100"
                                                   Height="8"
                                                   Style="{StaticResource MaterialDesignLinearProgressBar}"
                                                   Foreground="{Binding Level, Converter={StaticResource JLPTLevelToColorConverter}}"/>
                                    </StackPanel>
                                    
                                    <!-- Completion Badge -->
                                    <materialDesign:PackIcon Grid.Column="2" 
                                                           Kind="CheckCircle"
                                                           Foreground="{StaticResource AccentBrush}"
                                                           Width="24" 
                                                           Height="24"
                                                           Visibility="{Binding IsCompleted, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Loading Indicator -->
                <StackPanel Grid.Row="1"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                               Value="0"
                               IsIndeterminate="True"
                               Width="48"
                               Height="48"/>
                    <TextBlock Text="Loading JLPT Progress..." 
                             FontSize="16"
                             HorizontalAlignment="Center" 
                             Margin="0,16,0,0"
                             Opacity="0.8"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
<UserControl x:Class="JapaneseTracker.Views.JLPTProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:JapaneseTracker.ViewModels"
             xmlns:converters="clr-namespace:JapaneseTracker.Converters"
             Background="Transparent">
    
    <UserControl.Resources>
        <converters:JLPTLevelToColorConverter x:Key="JLPTLevelToColorConverter"/>
        <converters:PercentToCircleConverter x:Key="PercentToCircleConverter"/>
        <converters:BoolToTextConverter x:Key="BoolToTextConverter"/>
        <converters:BoolToIconConverter x:Key="BoolToIconConverter"/>
        <converters:EqualsToVisibilityConverter x:Key="EqualsToVisibilityConverter"/>
    </UserControl.Resources>
    
    <UserControl.DataContext>
        <viewModels:JLPTProgressViewModel/>
    </UserControl.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header Section -->
            <materialDesign:Card Grid.Row="0" 
                               Margin="0,0,0,24" 
                               Padding="24"
                               Background="{StaticResource PrimaryBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="JLPT Progress" 
                                   FontSize="32" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource OnPrimaryBrush}"/>
                        <TextBlock Text="Track your Japanese Language Proficiency Test journey"
                                   FontSize="16" 
                                   Margin="0,8,0,0"
                                   Foreground="{StaticResource OnPrimaryBrush}"
                                   Opacity="0.9"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                            <TextBlock Text="Current Level:" 
                                     FontSize="14"
                                     Foreground="{StaticResource OnPrimaryBrush}"
                                     Opacity="0.8"
                                     VerticalAlignment="Center"/>
                            <Border Background="{Binding CurrentLevel, Converter={StaticResource JLPTLevelToColorConverter}}"
                                  CornerRadius="12"
                                  Padding="12,4"
                                  Margin="8,0,16,0">
                                <TextBlock Text="{Binding CurrentLevel}" 
                                         FontWeight="Bold"
                                         FontSize="14"
                                         Foreground="White"/>
                            </Border>
                            
                            <!-- Streak Display -->
                            <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                                <materialDesign:PackIcon Kind="Fire" 
                                                       Foreground="{StaticResource OnPrimaryBrush}"
                                                       Width="16" 
                                                       Height="16"
                                                       VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding CurrentStreak, StringFormat='{}{0} day streak'}" 
                                         FontSize="14"
                                         Margin="4,0,0,0"
                                         Foreground="{StaticResource OnPrimaryBrush}"
                                         Opacity="0.8"
                                         VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Toggle Detailed View -->
                    <Button Grid.Column="1" 
                          Command="{Binding ToggleDetailedViewCommand}"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Foreground="{StaticResource OnPrimaryBrush}"
                          BorderBrush="{StaticResource OnPrimaryBrush}"
                          Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewList" 
                                                   Width="16" 
                                                   Height="16"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding ShowDetailedView, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Hide Details|Show Details'}"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Refresh Button -->
                    <Button Grid.Column="2" 
                          Command="{Binding LoadProgressCommand}"
                          Style="{StaticResource MaterialDesignOutlinedButton}"
                          Foreground="{StaticResource OnPrimaryBrush}"
                          BorderBrush="{StaticResource OnPrimaryBrush}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" 
                                                   Width="16" 
                                                   Height="16"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Refresh"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </materialDesign:Card>
            
            <!-- Current Level Progress and Exam Readiness -->
            <materialDesign:Card Grid.Row="1" 
                               Margin="0,0,0,24" 
                               Padding="24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                             Text="{Binding CurrentLevel, StringFormat='Current Level: {0} Progress'}" 
                             FontSize="20" 
                             FontWeight="SemiBold"
                             Margin="0,0,0,16"/>
                    
                    <!-- Progress Circles -->
                    <Grid Grid.Row="1" 
                        DataContext="{Binding SelectedProgress}"
                        Visibility="{Binding Converter={StaticResource BooleanToVisibilityConverter}}"
                        Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Kanji Progress -->
                        <Border Grid.Column="0" 
                              Background="{StaticResource SurfaceBrush}"
                              CornerRadius="12"
                              Padding="16"
                              Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="Kanji" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,12"/>
                                
                                <!-- Circular Progress Bar -->
                                <Grid Width="80" Height="80" HorizontalAlignment="Center">
                                    <Ellipse Fill="{StaticResource BackgroundBrush}"
                                           Stroke="{StaticResource OnSurfaceBrush}"
                                           StrokeThickness="8"
                                           Opacity="0.3"/>
                                    
                                    <Ellipse Fill="Transparent"
                                           Stroke="{StaticResource AccentBrush}"
                                           StrokeThickness="8"
                                           StrokeDashArray="{Binding KanjiProgress, Converter={StaticResource PercentToCircleConverter}}"
                                           StrokeDashOffset="75"
                                           RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform Angle="-90"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                    
                                    <TextBlock Text="{Binding KanjiProgress, StringFormat='{}{0:F0}%'}"
                                             FontSize="14"
                                             FontWeight="Bold"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <TextBlock Text="{Binding KanjiLearned, StringFormat='{}{0} learned'}"
                                         HorizontalAlignment="Center"
                                         Opacity="0.8"
                                         Margin="0,8,0,0"/>
                                <TextBlock Text="{Binding RequiredKanji, StringFormat='of {0} required'}"
                                         HorizontalAlignment="Center"
                                         Opacity="0.6"
                                         FontSize="12"/>
                                         
                                <!-- Quick Action Button -->
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                      Background="{StaticResource AccentBrush}"
                                      Content="Practice"
                                      Margin="0,8,0,0"
                                      Command="{Binding DataContext.StartPracticeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      CommandParameter="Kanji"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Vocabulary Progress -->
                        <Border Grid.Column="1" 
                              Background="{StaticResource SurfaceBrush}"
                              CornerRadius="12"
                              Padding="16"
                              Margin="4,0">
                            <StackPanel>
                                <TextBlock Text="Vocabulary" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,12"/>
                                
                                <!-- Circular Progress Bar -->
                                <Grid Width="80" Height="80" HorizontalAlignment="Center">
                                    <Ellipse Fill="{StaticResource BackgroundBrush}"
                                           Stroke="{StaticResource OnSurfaceBrush}"
                                           StrokeThickness="8"
                                           Opacity="0.3"/>
                                    
                                    <Ellipse Fill="Transparent"
                                           Stroke="{StaticResource SecondaryBrush}"
                                           StrokeThickness="8"
                                           StrokeDashArray="{Binding VocabularyProgress, Converter={StaticResource PercentToCircleConverter}}"
                                           StrokeDashOffset="75"
                                           RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform Angle="-90"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                    
                                    <TextBlock Text="{Binding VocabularyProgress, StringFormat='{}{0:F0}%'}"
                                             FontSize="14"
                                             FontWeight="Bold"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <TextBlock Text="{Binding VocabularyLearned, StringFormat='{}{0} learned'}"
                                         HorizontalAlignment="Center"
                                         Opacity="0.8"
                                         Margin="0,8,0,0"/>
                                <TextBlock Text="{Binding RequiredVocabulary, StringFormat='of {0} required'}"
                                         HorizontalAlignment="Center"
                                         Opacity="0.6"
                                         FontSize="12"/>
                                         
                                <!-- Quick Action Button -->
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                      Background="{StaticResource SecondaryBrush}"
                                      Content="Practice"
                                      Margin="0,8,0,0"
                                      Command="{Binding DataContext.StartPracticeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      CommandParameter="Vocabulary"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Grammar Progress -->
                        <Border Grid.Column="2" 
                              Background="{StaticResource SurfaceBrush}"
                              CornerRadius="12"
                              Padding="16"
                              Margin="8,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Grammar" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         HorizontalAlignment="Center"
                                         Margin="0,0,0,12"/>
                                
                                <!-- Circular Progress Bar -->
                                <Grid Width="80" Height="80" HorizontalAlignment="Center">
                                    <Ellipse Fill="{StaticResource BackgroundBrush}"
                                           Stroke="{StaticResource OnSurfaceBrush}"
                                           StrokeThickness="8"
                                           Opacity="0.3"/>
                                    
                                    <Ellipse Fill="Transparent"
                                           Stroke="#FF9800"
                                           StrokeThickness="8"
                                           StrokeDashArray="{Binding GrammarProgress, Converter={StaticResource PercentToCircleConverter}}"
                                           StrokeDashOffset="75"
                                           RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform Angle="-90"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                    
                                    <TextBlock Text="{Binding GrammarProgress, StringFormat='{}{0:F0}%'}"
                                             FontSize="14"
                                             FontWeight="Bold"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"/>
                                </Grid>
                                
                                <TextBlock Text="{Binding GrammarLearned, StringFormat='{}{0} learned'}"
                                         HorizontalAlignment="Center"
                                         Opacity="0.8"
                                         Margin="0,8,0,0"/>
                                <TextBlock Text="{Binding RequiredGrammar, StringFormat='of {0} required'}"
                                         HorizontalAlignment="Center"
                                         Opacity="0.6"
                                         FontSize="12"/>
                                         
                                <!-- Quick Action Button -->
                                <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                      Background="#FF9800"
                                      Content="Practice"
                                      Margin="0,8,0,0"
                                      Command="{Binding DataContext.StartPracticeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      CommandParameter="Grammar"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    
                    <!-- Exam Readiness Meter -->
                    <Border Grid.Row="2" 
                          Background="{StaticResource PrimaryBrush}"
                          CornerRadius="12"
                          Padding="20"
                          Margin="0,0,0,16">
                        <Grid DataContext="{Binding ExamReadiness}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding ReadinessLevel, StringFormat='Exam Readiness: {0}'}" 
                                         FontSize="18" 
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource OnPrimaryBrush}"/>
                                <TextBlock Text="{Binding ReadinessScore, StringFormat='You are {0:F0}% ready for JLPT {1}!'}" 
                                         FontSize="14" 
                                         Margin="0,4,0,8"
                                         Foreground="{StaticResource OnPrimaryBrush}"
                                         Opacity="0.9">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="You are {0:F0}% ready for JLPT {1}!">
                                            <Binding Path="ReadinessScore"/>
                                            <Binding Path="Level"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                         
                                <!-- Progress Bar for Readiness -->
                                <ProgressBar Value="{Binding ReadinessScore}" 
                                           Maximum="100"
                                           Height="8"
                                           Margin="0,0,0,8"
                                           Style="{StaticResource MaterialDesignLinearProgressBar}"
                                           Foreground="{StaticResource OnPrimaryBrush}"/>
                                           
                                <!-- Feedback Items -->
                                <ItemsControl ItemsSource="{Binding Feedback}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                                <materialDesign:PackIcon Kind="ChevronRight" 
                                                                       Width="12" 
                                                                       Height="12"
                                                                       Foreground="{StaticResource OnPrimaryBrush}"
                                                                       Opacity="0.7"
                                                                       VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding}" 
                                                         FontSize="12"
                                                         Margin="4,0,0,0"
                                                         Foreground="{StaticResource OnPrimaryBrush}"
                                                         Opacity="0.8"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            
                            <!-- Readiness Icon -->
                            <materialDesign:PackIcon Grid.Column="1" 
                                                   Kind="{Binding IsReady, Converter={StaticResource BoolToIconConverter}, ConverterParameter='CheckCircle|Clock'}"
                                                   Foreground="{StaticResource OnPrimaryBrush}"
                                                   Width="48" 
                                                   Height="48"/>
                        </Grid>
                    </Border>
                    
                    <!-- Study Recommendations -->
                    <Border Grid.Row="3" 
                          Background="{StaticResource SurfaceBrush}"
                          CornerRadius="12"
                          Padding="16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="Lightbulb" 
                                                       Width="20" 
                                                       Height="20"
                                                       VerticalAlignment="Center"
                                                       Foreground="{StaticResource AccentBrush}"/>
                                <TextBlock Text="Study Recommendations" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         Margin="8,0,0,0"
                                         VerticalAlignment="Center"/>
                                         
                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                      Content="Review Weak Areas"
                                      Margin="16,0,0,0"
                                      Command="{Binding ReviewWeakAreasCommand}"
                                      Foreground="{StaticResource AccentBrush}"/>
                            </StackPanel>
                            
                            <ItemsControl ItemsSource="{Binding StudyRecommendations}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,4">
                                            <materialDesign:PackIcon Kind="CheckCircleOutline" 
                                                                   Width="16" 
                                                                   Height="16"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{StaticResource AccentBrush}"
                                                                   Opacity="0.7"/>
                                            <TextBlock Text="{Binding}" 
                                                     FontSize="14"
                                                     Margin="8,0,0,0"
                                                     VerticalAlignment="Center"
                                                     TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </materialDesign:Card>
            
            <!-- Detailed View and All Levels Overview -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Detailed Drill-Down View -->
                <materialDesign:Card Grid.Row="0" 
                                   Padding="24"
                                   Margin="0,0,0,16"
                                   Visibility="{Binding ShowDetailedView, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="ViewList" 
                                                   Width="24" 
                                                   Height="24"
                                                   VerticalAlignment="Center"
                                                   Foreground="{StaticResource AccentBrush}"/>
                            <TextBlock Text="Detailed Progress View" 
                                     FontSize="20" 
                                     FontWeight="SemiBold"
                                     Margin="8,0,0,0"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Category Tabs -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
                            <Button Content="Kanji" 
                                  Style="{StaticResource MaterialDesignFlatButton}"
                                  Command="{Binding SelectCategoryCommand}"
                                  CommandParameter="Kanji"
                                  Margin="0,0,8,0"/>
                            <Button Content="Vocabulary" 
                                  Style="{StaticResource MaterialDesignFlatButton}"
                                  Command="{Binding SelectCategoryCommand}"
                                  CommandParameter="Vocabulary"
                                  Margin="0,0,8,0"/>
                            <Button Content="Grammar" 
                                  Style="{StaticResource MaterialDesignFlatButton}"
                                  Command="{Binding SelectCategoryCommand}"
                                  CommandParameter="Grammar"/>
                        </StackPanel>
                        
                        <!-- Study Items List -->
                        <Border Grid.Row="2" 
                              Background="{StaticResource SurfaceBrush}"
                              CornerRadius="8"
                              Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" 
                                         Text="{Binding SelectedCategory, StringFormat='Weak {0} Items - Focus Areas'}" 
                                         FontSize="16" 
                                         FontWeight="SemiBold"
                                         Margin="0,0,0,12"/>
                                
                                <ScrollViewer Grid.Row="1" 
                                            Height="200" 
                                            VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding CurrentCategoryItems}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource BackgroundBrush}"
                                                      CornerRadius="4"
                                                      Padding="12"
                                                      Margin="0,0,0,8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <!-- Content -->
                                                        <TextBlock Grid.Column="0" 
                                                                 Text="{Binding Content}" 
                                                                 FontSize="18"
                                                                 FontWeight="Bold"
                                                                 MinWidth="60"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                                        
                                                        <!-- Details -->
                                                        <StackPanel Grid.Column="1" 
                                                                  Margin="16,0,8,0">
                                                            <TextBlock Text="{Binding Meaning}" 
                                                                     FontSize="14"
                                                                     FontWeight="SemiBold"/>
                                                            <TextBlock Text="{Binding Reading}" 
                                                                     FontSize="12"
                                                                     Opacity="0.8"
                                                                     Margin="0,2,0,0"/>
                                                            <StackPanel Orientation="Horizontal" 
                                                                      Margin="0,4,0,0">
                                                                <Border Background="{Binding JLPTLevel, Converter={StaticResource JLPTLevelToColorConverter}}"
                                                                      CornerRadius="8"
                                                                      Padding="6,2">
                                                                    <TextBlock Text="{Binding JLPTLevel}" 
                                                                             FontSize="10"
                                                                             Foreground="White"/>
                                                                </Border>
                                                                <TextBlock Text="{Binding SRSLevel, StringFormat='SRS: {0}'}" 
                                                                         FontSize="10"
                                                                         Opacity="0.6"
                                                                         Margin="8,0,0,0"
                                                                         VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                        
                                                        <!-- Weakness Indicator -->
                                                        <materialDesign:PackIcon Grid.Column="2" 
                                                                               Kind="AlertCircle"
                                                                               Foreground="{StaticResource AlertColorBrush}"
                                                                               Width="20" 
                                                                               Height="20"
                                                                               Visibility="{Binding IsWeak, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                               VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </materialDesign:Card>
                
                <TextBlock Grid.Row="1" 
                         Text="All JLPT Levels" 
                         FontSize="20" 
                         FontWeight="SemiBold"
                         Margin="0,0,0,16"/>
                
                <ItemsControl Grid.Row="2" 
                            ItemsSource="{Binding JLPTProgressList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="0,0,0,16" 
                                               Padding="24"
                                               Cursor="Hand">
                                <materialDesign:Card.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" 
                                                Command="{Binding DataContext.SelectLevelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding Level}"/>
                                </materialDesign:Card.InputBindings>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Level Badge -->
                                    <Border Grid.Column="0" 
                                          Background="{Binding Level, Converter={StaticResource JLPTLevelToColorConverter}}"
                                          CornerRadius="24"
                                          Width="48" 
                                          Height="48"
                                          Margin="0,0,16,0">
                                        <TextBlock Text="{Binding Level}" 
                                                 FontWeight="Bold"
                                                 FontSize="16"
                                                 Foreground="White"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Progress Info -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Level, StringFormat='JLPT {0}'}" 
                                                 FontSize="18" 
                                                 FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding OverallProgress, StringFormat='{}{0:F0}% Complete'}" 
                                                 FontSize="14" 
                                                 Opacity="0.8"
                                                 Margin="0,4,0,8"/>
                                        
                                        <!-- Progress Bar -->
                                        <ProgressBar Value="{Binding OverallProgress}" 
                                                   Maximum="100"
                                                   Height="8"
                                                   Style="{StaticResource MaterialDesignLinearProgressBar}"
                                                   Foreground="{Binding Level, Converter={StaticResource JLPTLevelToColorConverter}}"/>
                                                   
                                        <!-- Category Progress Mini Bars -->
                                        <StackPanel Orientation="Horizontal" 
                                                  Margin="0,8,0,0">
                                            <StackPanel Margin="0,0,16,0">
                                                <TextBlock Text="Kanji" 
                                                         FontSize="10" 
                                                         Opacity="0.6"/>
                                                <ProgressBar Value="{Binding KanjiProgress}" 
                                                           Maximum="100"
                                                           Height="4"
                                                           Width="40"
                                                           Style="{StaticResource MaterialDesignLinearProgressBar}"
                                                           Foreground="{StaticResource AccentBrush}"/>
                                            </StackPanel>
                                            <StackPanel Margin="0,0,16,0">
                                                <TextBlock Text="Vocab" 
                                                         FontSize="10" 
                                                         Opacity="0.6"/>
                                                <ProgressBar Value="{Binding VocabularyProgress}" 
                                                           Maximum="100"
                                                           Height="4"
                                                           Width="40"
                                                           Style="{StaticResource MaterialDesignLinearProgressBar}"
                                                           Foreground="{StaticResource SecondaryBrush}"/>
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Text="Grammar" 
                                                         FontSize="10" 
                                                         Opacity="0.6"/>
                                                <ProgressBar Value="{Binding GrammarProgress}" 
                                                           Maximum="100"
                                                           Height="4"
                                                           Width="40"
                                                           Style="{StaticResource MaterialDesignLinearProgressBar}"
                                                           Foreground="{StaticResource OrangeBrush}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Practice Button -->
                                    <Button Grid.Column="2" 
                                          Style="{StaticResource MaterialDesignOutlinedButton}"
                                          Content="Practice"
                                          Command="{Binding DataContext.StartPracticeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                          CommandParameter="{Binding Level}"
                                          Margin="8,0"/>
                                    
                                    <!-- Completion Badge -->
                                    <materialDesign:PackIcon Grid.Column="3" 
                                                           Kind="CheckCircle"
                                                           Foreground="{StaticResource AccentBrush}"
                                                           Width="24" 
                                                           Height="24"
                                                           Visibility="{Binding IsCompleted, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <!-- Loading Indicator -->
                <StackPanel Grid.Row="2"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                               Value="0"
                               IsIndeterminate="True"
                               Width="48"
                               Height="48"/>
                    <TextBlock Text="Loading JLPT Progress..." 
                             FontSize="16"
                             HorizontalAlignment="Center" 
                             Margin="0,16,0,0"
                             Opacity="0.8"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
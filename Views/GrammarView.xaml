<UserControl x:Class="JapaneseTracker.Views.GrammarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:JapaneseTracker.ViewModels"
             Background="Transparent">
    
    <UserControl.DataContext>
        <viewModels:GrammarViewModel/>
    </UserControl.DataContext>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Grammar Patterns" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Master Japanese grammar patterns with examples and explanations"
                               FontSize="16"
                               Opacity="0.7"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <!-- JLPT Level Filter -->
                    <ComboBox ItemsSource="{Binding JLPTLevels}"
                              SelectedItem="{Binding SelectedJLPTLevel}"
                              materialDesign:HintAssist.Hint="JLPT Level"
                              MinWidth="120"
                              Margin="0,0,16,0"/>
                    
                    <!-- Search Box -->
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Search grammar..."
                             MinWidth="200"
                             Margin="0,0,16,0">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchGrammarCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    
                    <!-- Search Button -->
                    <Button Command="{Binding SearchGrammarCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            ToolTip="Search">
                        <materialDesign:PackIcon Kind="Magnify"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        
        <!-- Stats Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Total Grammar -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="{Binding GrammarList.Count, StringFormat='{}Total: {0}'}"
                               FontSize="18"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Patterns"
                               FontSize="14"
                               Opacity="0.7"/>
                </StackPanel>
            </materialDesign:Card>
            
            <!-- Learned -->
            <materialDesign:Card Grid.Column="1" Margin="8,0,8,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="{Binding LearnedCount, StringFormat='{}Learned: {0}'}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource SuccessBrush}"/>
                    <TextBlock Text="Patterns"
                               FontSize="14"
                               Opacity="0.7"/>
                </StackPanel>
            </materialDesign:Card>
            
            <!-- Review Due -->
            <materialDesign:Card Grid.Column="2" Margin="8,0,8,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="{Binding ReviewDueCount, StringFormat='{}Due: {0}'}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource WarningBrush}"/>
                    <TextBlock Text="Reviews"
                               FontSize="14"
                               Opacity="0.7"/>
                </StackPanel>
            </materialDesign:Card>
            
            <!-- Study Streak -->
            <materialDesign:Card Grid.Column="3" Margin="8,0,0,0" Padding="16">
                <StackPanel>
                    <TextBlock Text="{Binding CurrentUser.StudyStreak, StringFormat='{}Streak: {0}'}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource SecondaryBrush}"/>
                    <TextBlock Text="Days"
                               FontSize="14"
                               Opacity="0.7"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>
        
        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Grammar List -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource PrimaryBrush}" 
                            Padding="16,12">
                        <TextBlock Text="Grammar Patterns" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource OnPrimaryBrush}"/>
                    </Border>
                    
                    <!-- List -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding GrammarList}"
                             SelectedItem="{Binding SelectedGrammar}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{StaticResource DividerBrush}" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="16,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Pattern Info -->
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Pattern}" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold"
                                                       FontFamily="{StaticResource JapaneseFontFamily}"/>
                                            <TextBlock Text="{Binding Structure}" 
                                                       FontSize="12" 
                                                       Opacity="0.7"
                                                       Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding Meaning}" 
                                                       FontSize="14" 
                                                       Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding JLPTLevel}" 
                                                       FontSize="11" 
                                                       Foreground="{Binding JLPTLevel, Converter={StaticResource JLPTLevelToColorConverter}}"
                                                       Opacity="0.8"/>
                                        </StackPanel>
                                        
                                        <!-- SRS Level -->
                                        <materialDesign:PackIcon Grid.Column="1" 
                                                               Kind="{Binding SRSLevel, Converter={StaticResource SRSLevelToIconConverter}}" 
                                                               Width="16" 
                                                               Height="16"
                                                               VerticalAlignment="Center"
                                                               Opacity="0.6"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </materialDesign:Card>
            
            <!-- Grammar Details -->
            <materialDesign:Card Grid.Column="1" Margin="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource PrimaryBrush}" 
                            Padding="16,12">
                        <TextBlock Text="Pattern Details" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource OnPrimaryBrush}"/>
                    </Border>
                    
                    <!-- Details Content -->
                    <ScrollViewer Grid.Row="1" Padding="24">
                        <StackPanel>
                            <!-- No Selection Message -->
                            <StackPanel Visibility="{Binding SelectedGrammar, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverted}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="SelectionSearch" 
                                                       Width="64" 
                                                       Height="64" 
                                                       Opacity="0.3"
                                                       HorizontalAlignment="Center"/>
                                <TextBlock Text="Select a pattern to view details"
                                           FontSize="18"
                                           Opacity="0.7"
                                           HorizontalAlignment="Center"
                                           Margin="0,16,0,0"/>
                            </StackPanel>
                            
                            <!-- Grammar Details -->
                            <StackPanel Visibility="{Binding SelectedGrammar, Converter={StaticResource BooleanToVisibilityConverter}}">
                                
                                <!-- Pattern Display -->
                                <Border Background="{StaticResource SurfaceBrush}"
                                        BorderBrush="{StaticResource DividerBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="24"
                                        Margin="0,0,0,24"
                                        HorizontalAlignment="Center">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding SelectedGrammar.Pattern}" 
                                                   FontSize="32" 
                                                   FontFamily="{StaticResource JapaneseFontFamily}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="{Binding SelectedGrammar.Structure}" 
                                                   FontSize="16" 
                                                   HorizontalAlignment="Center"
                                                   Opacity="0.7"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Basic Info -->
                                <Grid Margin="0,0,0,24">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Meaning" 
                                                   FontWeight="SemiBold" 
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding SelectedGrammar.Meaning}" 
                                                   FontSize="16"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="JLPT Level" 
                                                   FontWeight="SemiBold" 
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding SelectedGrammar.JLPTLevel}" 
                                                   FontSize="16"
                                                   Foreground="{Binding SelectedGrammar.JLPTLevel, Converter={StaticResource JLPTLevelToColorConverter}}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Explanation -->
                                <StackPanel Margin="0,0,0,24">
                                    <TextBlock Text="Explanation" 
                                               FontWeight="SemiBold" 
                                               FontSize="16" 
                                               Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding SelectedGrammar.Explanation}" 
                                               FontSize="14"
                                               TextWrapping="Wrap"
                                               LineHeight="20"/>
                                </StackPanel>
                                
                                <!-- Formation -->
                                <StackPanel Margin="0,0,0,24">
                                    <TextBlock Text="Formation" 
                                               FontWeight="SemiBold" 
                                               FontSize="16" 
                                               Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource SurfaceBrush}"
                                            BorderBrush="{StaticResource DividerBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="16">
                                        <TextBlock Text="{Binding SelectedGrammar.Formation}" 
                                                   FontSize="14"
                                                   FontFamily="{StaticResource JapaneseFontFamily}"
                                                   TextWrapping="Wrap"
                                                   LineHeight="18"/>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Examples -->
                                <StackPanel Margin="0,0,0,24">
                                    <TextBlock Text="Examples" 
                                               FontWeight="SemiBold" 
                                               FontSize="16" 
                                               Margin="0,0,0,12"/>
                                    
                                    <ItemsControl ItemsSource="{Binding SelectedGrammar.Examples}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{StaticResource SurfaceBrush}"
                                                        BorderBrush="{StaticResource DividerBrush}"
                                                        BorderThickness="1"
                                                        CornerRadius="4"
                                                        Padding="16"
                                                        Margin="0,0,0,12">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding}" 
                                                                   FontSize="14"
                                                                   FontFamily="{StaticResource JapaneseFontFamily}"
                                                                   TextWrapping="Wrap"
                                                                   LineHeight="18"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                
                                <!-- Usage Notes -->
                                <StackPanel Margin="0,0,0,24" 
                                            Visibility="{Binding SelectedGrammar.UsageNotes, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Usage Notes" 
                                               FontWeight="SemiBold" 
                                               FontSize="16" 
                                               Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource WarningBrush}"
                                            Opacity="0.1"
                                            BorderBrush="{StaticResource WarningBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="16">
                                        <TextBlock Text="{Binding SelectedGrammar.UsageNotes}" 
                                                   FontSize="14"
                                                   TextWrapping="Wrap"
                                                   LineHeight="18"/>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Action Buttons -->
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center"
                                            Margin="0,24,0,0">
                                    <Button Command="{Binding StudyGrammarCommand}"
                                            CommandParameter="{Binding SelectedGrammar}"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Margin="0,0,16,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="School" 
                                                                   Width="18" 
                                                                   Height="18"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Study"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Command="{Binding GetExplanationCommand}"
                                            CommandParameter="{Binding SelectedGrammar}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Margin="0,0,16,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="HelpCircle" 
                                                                   Width="18" 
                                                                   Height="18"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Ask AI"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Style="{StaticResource MaterialDesignOutlinedButton}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="CardText" 
                                                                   Width="18" 
                                                                   Height="18"
                                                                   Margin="0,0,8,0"/>
                                            <TextBlock Text="Practice"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</UserControl>

<UserControl x:Class="JapaneseTracker.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:JapaneseTracker.ViewModels">
    
    <UserControl.DataContext>
        <viewModels:DashboardViewModel/>
    </UserControl.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Welcome Section -->
            <materialDesign:Card Grid.Row="0" 
                               Margin="0,0,0,24" 
                               Padding="24"
                               Background="{StaticResource PrimaryBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Welcome back!" 
                                   FontSize="24" 
                                   FontWeight="Medium"
                                   Foreground="{StaticResource OnPrimaryBrush}"/>
                        <TextBlock Text="{Binding User.Username, StringFormat='Hello {0}! Ready to continue your Japanese learning journey?', FallbackValue='Hello! Ready to start your Japanese learning journey?'}"
                                   FontSize="16" 
                                   Margin="0,8,0,0"
                                   Foreground="{StaticResource OnPrimaryBrush}"
                                   Opacity="0.9"/>
                        <TextBlock Text="{Binding CurrentStreak, StringFormat='Current Study Streak: {0} days ðŸ”¥', FallbackValue='Start your study streak today! ðŸ”¥'}"
                                   FontSize="14" 
                                   Margin="0,8,0,0"
                                   Foreground="{StaticResource OnPrimaryBrush}"
                                   Opacity="0.8"/>
                    </StackPanel>
                    
                    <materialDesign:PackIcon Grid.Column="1" 
                                           Kind="School" 
                                           Width="64" 
                                           Height="64"
                                           Foreground="{StaticResource OnPrimaryBrush}"
                                           Opacity="0.7"
                                           VerticalAlignment="Center"/>
                </Grid>
            </materialDesign:Card>
            
            <!-- Stats Cards Row -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Kanji Stats -->
                <materialDesign:Card Grid.Column="0" 
                                   Margin="0,0,12,0" 
                                   Padding="16">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Ideogram" 
                                               Width="32" 
                                               Height="32"
                                               Foreground="{StaticResource JLPTN3Brush}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"/>
                        <TextBlock Text="Kanji" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding StudyStatistics[LearnedKanji], FallbackValue='0'}"
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource JLPTN3Brush}"/>
                        <TextBlock Text="Learned" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.6"/>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Vocabulary Stats -->
                <materialDesign:Card Grid.Column="1" 
                                   Margin="6,0,6,0" 
                                   Padding="16">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Book" 
                                               Width="32" 
                                               Height="32"
                                               Foreground="{StaticResource JLPTN4Brush}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"/>
                        <TextBlock Text="Vocabulary" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding StudyStatistics[LearnedVocabulary], FallbackValue='0'}"
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource JLPTN4Brush}"/>
                        <TextBlock Text="Learned" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.6"/>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Grammar Stats -->
                <materialDesign:Card Grid.Column="2" 
                                   Margin="6,0,6,0" 
                                   Padding="16">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="FormatListBulleted" 
                                               Width="32" 
                                               Height="32"
                                               Foreground="{StaticResource JLPTN2Brush}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"/>
                        <TextBlock Text="Grammar" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding StudyStatistics[LearnedGrammar], FallbackValue='0'}"
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource JLPTN2Brush}"/>
                        <TextBlock Text="Learned" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.6"/>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Review Queue -->
                <materialDesign:Card Grid.Column="3" 
                                   Margin="12,0,0,0" 
                                   Padding="16">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Clock" 
                                               Width="32" 
                                               Height="32"
                                               Foreground="{StaticResource JLPTN1Brush}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,8"/>
                        <TextBlock Text="Reviews" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding ReviewQueueCount, FallbackValue='0'}"
                                   FontSize="24" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource JLPTN1Brush}"/>
                        <TextBlock Text="Due" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.6"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
            
            <!-- Main Content Row -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Column - JLPT Progress -->
                <materialDesign:Card Grid.Column="0" 
                                   Margin="0,0,12,0" 
                                   Padding="24">
                    <StackPanel>
                        <TextBlock Text="JLPT Progress" 
                                   FontSize="18" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,16"/>
                        
                        <!-- JLPT Level Cards -->
                        <ItemsControl ItemsSource="{Binding JLPTLevels}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SurfaceBrush}"
                                            Padding="16,12"
                                            Margin="0,0,0,8"
                                            CornerRadius="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Level Badge -->
                                            <Border Grid.Column="0"
                                                    Background="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
                                                    Padding="8,4"
                                                    CornerRadius="4"
                                                    Margin="0,0,12,0">
                                                <TextBlock Text="{Binding Level}"
                                                         FontWeight="Bold"
                                                         Foreground="White"
                                                         FontSize="12"/>
                                            </Border>
                                            
                                            <!-- Level Info -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}"
                                                         FontWeight="Medium"
                                                         FontSize="14"/>
                                                <TextBlock Text="{Binding Description}"
                                                         FontSize="12"
                                                         Opacity="0.7"/>
                                            </StackPanel>
                                            
                                            <!-- Progress -->
                                            <StackPanel Grid.Column="2" 
                                                        Orientation="Horizontal"
                                                        VerticalAlignment="Center">
                                                <ProgressBar Width="60"
                                                           Height="4"
                                                           Value="0"
                                                           Maximum="100"
                                                           Margin="0,0,8,0"/>
                                                <TextBlock Text="0%"
                                                         FontSize="12"
                                                         Opacity="0.8"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Right Column - Daily Tip -->
                <materialDesign:Card Grid.Column="1" 
                                   Margin="12,0,0,0" 
                                   Padding="24">
                    <StackPanel>
                        <TextBlock Text="Daily Japanese Tip" 
                                   FontSize="18" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,16"/>
                        
                        <!-- Japanese Quote/Tip -->
                        <Border Background="{StaticResource BackgroundBrush}"
                                Padding="16"
                                CornerRadius="8">
                            <TextBlock Text="{Binding JapaneseQuote}"
                                     TextWrapping="Wrap"
                                     FontSize="14"
                                     LineHeight="22"/>
                        </Border>
                        
                        <!-- Quick Action Buttons -->
                        <StackPanel Margin="0,16,0,0">
                            <Button Content="Start Review Session"
                                    Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                    Margin="0,0,0,8"/>
                            <Button Content="Practice Kanji"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,0,8"/>
                            <Button Content="Study Grammar"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>

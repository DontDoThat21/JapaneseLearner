<UserControl x:Class="JapaneseTracker.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:JapaneseTracker.ViewModels"
             xmlns:converters="clr-namespace:JapaneseTracker.Converters">
    
    <UserControl.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        <converters:JLPTLevelToColorConverter x:Key="JLPTLevelToColorConverter"/>
    </UserControl.Resources>
    
    <UserControl.DataContext>
        <viewModels:DashboardViewModel/>
    </UserControl.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Welcome Section -->
            <materialDesign:Card Grid.Row="0" 
                               Margin="0,0,0,24" 
                               Padding="24"
                               Background="{StaticResource PrimaryBrush}"
                               Style="{StaticResource AnimatedCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Welcome back!" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource OnPrimaryBrush}"/>
                        <TextBlock Text="{Binding User.Username, StringFormat='Hello {0}! Ready to continue your Japanese learning journey?', FallbackValue='Hello! Ready to start your Japanese learning journey?'}"
                                   FontSize="16" 
                                   Margin="0,8,0,0"
                                   Foreground="{StaticResource OnPrimaryBrush}"
                                   Opacity="0.9"/>
                        
                        <!-- Study Streak Section -->
                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Flame Icon with Animation -->
                            <materialDesign:PackIcon Grid.Column="0" 
                                                   Kind="Fire" 
                                                   Width="24" 
                                                   Height="24"
                                                   Foreground="{StaticResource OnPrimaryBrush}"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="{Binding CurrentStreak}" 
                                         FontSize="20" 
                                         FontWeight="Bold"
                                         Foreground="{StaticResource OnPrimaryBrush}"/>
                                <TextBlock Text=" day study streak!" 
                                         FontSize="16" 
                                         Margin="4,0,0,0"
                                         Foreground="{StaticResource OnPrimaryBrush}"
                                         Opacity="0.9"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- JLPT Level Badge -->
                        <Border Background="{Binding User.CurrentJLPTLevel, Converter={StaticResource JLPTLevelToColorConverter}}"
                                Padding="12,6"
                                CornerRadius="16"
                                HorizontalAlignment="Left"
                                Margin="0,12,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Star" 
                                                       Width="16" 
                                                       Height="16"
                                                       Foreground="White"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,4,0"/>
                                <TextBlock Text="{Binding User.CurrentJLPTLevel, StringFormat='Current Level: {0}'}" 
                                         FontWeight="Medium"
                                         Foreground="White"
                                         FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <materialDesign:PackIcon Grid.Column="1" 
                                           Kind="School" 
                                           Width="64" 
                                           Height="64"
                                           Foreground="{StaticResource OnPrimaryBrush}"
                                           Opacity="0.7"
                                           VerticalAlignment="Center"/>
                </Grid>
            </materialDesign:Card>
            
            <!-- Stats Cards Row -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Kanji Stats -->
                <materialDesign:Card Grid.Column="0" 
                                   Margin="0,0,6,0" 
                                   Padding="20"
                                   Style="{StaticResource AnimatedCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="Ideogram" 
                                                   Width="36" 
                                                   Height="36"
                                                   Foreground="{StaticResource JLPTN3Brush}"
                                                   HorizontalAlignment="Center"/>
                        </Grid>
                        
                        <TextBlock Text="Kanji" 
                                   FontSize="16" 
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        
                        <TextBlock Text="{Binding StudyStatistics[LearnedKanji], FallbackValue='247'}"
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource JLPTN3Brush}"
                                   Margin="0,0,0,4"/>
                        
                        <TextBlock Text="Learned" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.6"
                                   Margin="0,0,0,8"/>
                        
                        <!-- Progress Bar -->
                        <ProgressBar Value="24.7" 
                                     Maximum="100" 
                                     Height="4" 
                                     Background="{StaticResource SurfaceBrush}"
                                     Foreground="{StaticResource JLPTN3Brush}"/>
                        <TextBlock Text="{Binding N4ProgressPercentage, StringFormat='N4 Progress: {0}%'}" 
                                   FontSize="10" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.7"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Vocabulary Stats -->
                <materialDesign:Card Grid.Column="1" 
                                   Margin="6,0,6,0" 
                                   Padding="20"
                                   Style="{StaticResource AnimatedCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="Book" 
                                                   Width="36" 
                                                   Height="36"
                                                   Foreground="{StaticResource JLPTN4Brush}"
                                                   HorizontalAlignment="Center"/>
                        </Grid>
                        
                        <TextBlock Text="Vocabulary" 
                                   FontSize="16" 
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        
                        <TextBlock Text="{Binding StudyStatistics[LearnedVocabulary], FallbackValue='892'}"
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource JLPTN4Brush}"
                                   Margin="0,0,0,4"/>
                        
                        <TextBlock Text="Learned" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.6"
                                   Margin="0,0,0,8"/>
                        
                        <!-- Progress Bar -->
                        <ProgressBar Value="59.5" 
                                     Maximum="100" 
                                     Height="4" 
                                     Background="{StaticResource SurfaceBrush}"
                                     Foreground="{StaticResource JLPTN4Brush}"/>
                        <TextBlock Text="{Binding VocabularyProgressPercentage, StringFormat='N4 Progress: {0}%'}" 
                                   FontSize="10" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.7"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Grammar Stats -->
                <materialDesign:Card Grid.Column="2" 
                                   Margin="6,0,6,0" 
                                   Padding="20"
                                   Style="{StaticResource AnimatedCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="FormatListBulleted" 
                                                   Width="36" 
                                                   Height="36"
                                                   Foreground="{StaticResource JLPTN2Brush}"
                                                   HorizontalAlignment="Center"/>
                        </Grid>
                        
                        <TextBlock Text="Grammar" 
                                   FontSize="16" 
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        
                        <TextBlock Text="{Binding StudyStatistics[LearnedGrammar], FallbackValue='45'}"
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource JLPTN2Brush}"
                                   Margin="0,0,0,4"/>
                        
                        <TextBlock Text="Patterns" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.6"
                                   Margin="0,0,0,8"/>
                        
                        <!-- Progress Bar -->
                        <ProgressBar Value="{Binding GrammarProgress}" 
                                     Maximum="100" 
                                     Height="4" 
                                     Background="{StaticResource SurfaceBrush}"
                                     Foreground="{StaticResource JLPTN2Brush}"/>
                        <TextBlock Text="{Binding GrammarProgress, StringFormat='N4 Progress: {0}%'}" 
                                   FontSize="10" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.7"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Review Queue -->
                <materialDesign:Card Grid.Column="3" 
                                   Margin="6,0,0,0" 
                                   Padding="20"
                                   Style="{StaticResource AnimatedCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,12">
                            <materialDesign:PackIcon Kind="Clock" 
                                                   Width="36" 
                                                   Height="36"
                                                   Foreground="{StaticResource JLPTN1Brush}"
                                                   HorizontalAlignment="Center"/>
                        </Grid>
                        
                        <TextBlock Text="Reviews" 
                                   FontSize="16" 
                                   FontWeight="Medium"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        
                        <TextBlock Text="{Binding ReviewQueueCount, FallbackValue='23'}"
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="{StaticResource JLPTN1Brush}"
                                   Margin="0,0,0,4"/>
                        
                        <TextBlock Text="Due Now" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center"
                                   Opacity="0.6"
                                   Margin="0,0,0,8"/>
                        
                        <!-- Start Review Button -->
                        <Button Content="Start Reviews"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="{StaticResource JLPTN1Brush}"
                                BorderBrush="{StaticResource JLPTN1Brush}"
                                Padding="12,6"
                                FontSize="10"
                                Margin="0,4,0,0"/>
                    </StackPanel>
                </materialDesign:Card>
            </Grid>
            
            <!-- Main Content Row -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Left Column - JLPT Progress -->
                <materialDesign:Card Grid.Column="0" 
                                   Grid.Row="0"
                                   Margin="0,0,12,0" 
                                   Padding="24"
                                   Style="{StaticResource AnimatedCardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="JLPT Progress Path" 
                                       FontSize="20" 
                                       FontWeight="Medium"/>
                            
                            <materialDesign:PackIcon Grid.Column="1" 
                                                   Kind="TrendingUp" 
                                                   Width="24" 
                                                   Height="24"
                                                   Foreground="{StaticResource SuccessBrush}"
                                                   VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- JLPT Level Cards -->
                        <ItemsControl ItemsSource="{Binding JLPTLevels}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SurfaceBrush}"
                                            Padding="18,14"
                                            Margin="0,0,0,12"
                                            CornerRadius="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Level Badge -->
                                            <Border Grid.Column="0"
                                                    Background="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
                                                    Padding="12,8"
                                                    CornerRadius="8"
                                                    Margin="0,0,16,0">
                                                <TextBlock Text="{Binding Level}"
                                                         FontWeight="Bold"
                                                         Foreground="White"
                                                         FontSize="14"/>
                                            </Border>
                                            
                                            <!-- Level Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}"
                                                         FontWeight="Medium"
                                                         FontSize="16"
                                                         Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Description}"
                                                         FontSize="13"
                                                         Opacity="0.7"/>
                                                
                                                <!-- Requirements -->
                                                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                    <TextBlock Text="{Binding RequiredKanji, StringFormat='{0} Kanji'}" 
                                                             FontSize="11" 
                                                             Opacity="0.6"
                                                             Margin="0,0,16,0"/>
                                                    <TextBlock Text="{Binding RequiredVocabulary, StringFormat='{0} Vocab'}" 
                                                             FontSize="11" 
                                                             Opacity="0.6"
                                                             Margin="0,0,16,0"/>
                                                    <TextBlock Text="{Binding RequiredGrammar, StringFormat='{0} Grammar'}" 
                                                             FontSize="11" 
                                                             Opacity="0.6"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <!-- Progress -->
                                            <StackPanel Grid.Column="2" 
                                                        VerticalAlignment="Center"
                                                        Margin="16,0,0,0">
                                                <!-- Circular Progress Indicator -->
                                                <Grid Width="50" Height="50">
                                                    <Ellipse Stroke="{StaticResource SurfaceBrush}" 
                                                           StrokeThickness="4" 
                                                           Fill="Transparent"/>
                                                    <Ellipse Stroke="{Binding Color, Converter={StaticResource ColorToBrushConverter}}" 
                                                           StrokeThickness="4" 
                                                           Fill="Transparent"
                                                           StrokeDashArray="0,100" 
                                                           StrokeDashOffset="25"/>
                                                    <TextBlock Text="0%" 
                                                             FontSize="12" 
                                                             FontWeight="Bold"
                                                             HorizontalAlignment="Center" 
                                                             VerticalAlignment="Center"/>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Right Column - Daily Tip & Quick Actions -->
                <StackPanel Grid.Column="1" Grid.Row="0">
                    <!-- Daily Japanese Tip -->
                    <materialDesign:Card Margin="12,0,0,16" 
                                       Padding="20"
                                       Style="{StaticResource AnimatedCardStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                         Text="Daily Japanese Tip" 
                                         FontSize="18" 
                                         FontWeight="Medium"/>
                                
                                <materialDesign:PackIcon Grid.Column="1" 
                                                       Kind="Lightbulb" 
                                                       Width="20" 
                                                       Height="20"
                                                       Foreground="{StaticResource WarningBrush}"
                                                       VerticalAlignment="Center"/>
                            </Grid>
                            
                            <!-- Japanese Quote/Tip -->
                            <Border Background="{StaticResource BackgroundBrush}"
                                    Padding="16"
                                    CornerRadius="12">
                                <TextBlock Text="{Binding JapaneseQuote}"
                                         TextWrapping="Wrap"
                                         FontSize="14"
                                         LineHeight="20"
                                         Style="{StaticResource JapaneseTextStyle}"/>
                            </Border>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <!-- Quick Actions -->
                    <materialDesign:Card Margin="12,0,0,0" 
                                       Padding="20"
                                       Style="{StaticResource AnimatedCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" 
                                     FontSize="18" 
                                     FontWeight="Medium"
                                     Margin="0,0,0,16"/>
                            
                            <Button Content="Start Review Session"
                                    Style="{StaticResource MaterialDesignRaisedAccentButton}"
                                    Margin="0,0,0,12"
                                    Padding="16,12">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Play" 
                                                               Width="18" 
                                                               Height="18"
                                                               Margin="0,0,8,0"/>
                                        <TextBlock Text="Start Reviews"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            
                            <Button Content="Practice Kanji"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="0,0,0,12"
                                    Padding="16,12">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Ideogram" 
                                                               Width="18" 
                                                               Height="18"
                                                               Margin="0,0,8,0"/>
                                        <TextBlock Text="Practice Kanji"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            
                            <Button Content="Study Grammar"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Padding="16,12">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FormatListBulleted" 
                                                               Width="18" 
                                                               Height="18"
                                                               Margin="0,0,8,0"/>
                                        <TextBlock Text="Study Grammar"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </materialDesign:Card>
                </StackPanel>
                
                <!-- Weekly Progress Chart -->
                <materialDesign:Card Grid.Column="0" 
                                   Grid.ColumnSpan="2"
                                   Grid.Row="1"
                                   Margin="0,24,0,0" 
                                   Padding="24"
                                   Style="{StaticResource AnimatedCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Study Heatmap -->
                        <StackPanel Grid.Column="0">
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                         Text="This Week's Study Activity" 
                                         FontSize="18" 
                                         FontWeight="Medium"/>
                                
                                <TextBlock Grid.Column="1"
                                         Text="67 hours total" 
                                         FontSize="14" 
                                         Opacity="0.7"
                                         VerticalAlignment="Center"/>
                            </Grid>
                            
                            <!-- Study Heatmap -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Day blocks -->
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Text="Mon" FontSize="12" Opacity="0.6" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource SuccessBrush}" Width="40" Height="40" CornerRadius="8">
                                        <TextBlock Text="2.5h" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Text="Tue" FontSize="12" Opacity="0.6" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource JLPTN4Brush}" Width="40" Height="40" CornerRadius="8">
                                        <TextBlock Text="1.8h" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="Wed" FontSize="12" Opacity="0.6" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource SuccessBrush}" Width="40" Height="40" CornerRadius="8">
                                        <TextBlock Text="3.2h" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                    <TextBlock Text="Thu" FontSize="12" Opacity="0.6" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource JLPTN3Brush}" Width="40" Height="40" CornerRadius="8">
                                        <TextBlock Text="1.5h" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                                    <TextBlock Text="Fri" FontSize="12" Opacity="0.6" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource SuccessBrush}" Width="40" Height="40" CornerRadius="8">
                                        <TextBlock Text="2.1h" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="5" HorizontalAlignment="Center">
                                    <TextBlock Text="Sat" FontSize="12" Opacity="0.6" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource JLPTN2Brush}" Width="40" Height="40" CornerRadius="8">
                                        <TextBlock Text="0.9h" FontSize="11" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="6" HorizontalAlignment="Center">
                                    <TextBlock Text="Sun" FontSize="12" Opacity="0.6" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <Border Background="{StaticResource SurfaceBrush}" Width="40" Height="40" CornerRadius="8" BorderBrush="{StaticResource OnSurfaceBrush}" BorderThickness="2" Opacity="0.5">
                                        <TextBlock Text="Today" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        
                        <!-- Recent Achievements -->
                        <StackPanel Grid.Column="1" Margin="40,0,0,0">
                            <TextBlock Text="Recent Achievements" 
                                     FontSize="16" 
                                     FontWeight="Medium"
                                     Margin="0,0,0,16"/>
                            
                            <!-- Achievement Items -->
                            <StackPanel>
                                <!-- Achievement 1 -->
                                <Border Background="{StaticResource SurfaceBrush}"
                                        Padding="12"
                                        Margin="0,0,0,8"
                                        CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <materialDesign:PackIcon Grid.Column="0" 
                                                               Kind="Trophy" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="{StaticResource JLPTN3Brush}"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,12,0"/>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="First Week!" 
                                                     FontWeight="Medium"
                                                     FontSize="13"/>
                                            <TextBlock Text="Complete 7 days of study" 
                                                     FontSize="11" 
                                                     Opacity="0.6"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                
                                <!-- Achievement 2 -->
                                <Border Background="{StaticResource SurfaceBrush}"
                                        Padding="12"
                                        Margin="0,0,0,8"
                                        CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <materialDesign:PackIcon Grid.Column="0" 
                                                               Kind="BookOpen" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="{StaticResource JLPTN4Brush}"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,12,0"/>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Kanji Master" 
                                                     FontWeight="Medium"
                                                     FontSize="13"/>
                                            <TextBlock Text="Learn 100+ Kanji characters" 
                                                     FontSize="11" 
                                                     Opacity="0.6"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                
                                <!-- Achievement 3 -->
                                <Border Background="{StaticResource SurfaceBrush}"
                                        Padding="12"
                                        CornerRadius="8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <materialDesign:PackIcon Grid.Column="0" 
                                                               Kind="FlashAuto" 
                                                               Width="20" 
                                                               Height="20"
                                                               Foreground="{StaticResource JLPTN1Brush}"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,12,0"/>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Review Streak" 
                                                     FontWeight="Medium"
                                                     FontSize="13"/>
                                            <TextBlock Text="Complete 50+ reviews" 
                                                     FontSize="11" 
                                                     Opacity="0.6"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
